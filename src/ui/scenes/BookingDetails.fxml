<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #131022;" stylesheets="@MainCss.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controllers.BookingDetailsController">
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <content>
                <VBox alignment="CENTER" prefWidth="Infinity">
                    <VBox alignment="CENTER" maxWidth="600" spacing="15"
                          style="-fx-background-color: lightyellow; -fx-padding: 20; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);"
                          styleClass="ticket-card">
                        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="🚆 ตั๋วโดยสารรถไฟ" />
                        <HBox spacing="10">
                            <Label style="-fx-font-weight: bold;" text="รหัสตั๋ว:" />
                            <Label fx:id="bookingIdLabel" />
                        </HBox>
                        <HBox spacing="10">
                            <Label style="-fx-font-weight: bold;" text="ขบวนรถไฟ:" />
                            <Label fx:id="trainIdLabel" />
                        </HBox>
                        <HBox spacing="10">
                            <Label style="-fx-font-weight: bold;" text="ต้นทาง:" />
                            <Label fx:id="fromStationLabel" />
                            <Label text="→" />
                            <Label fx:id="toStationLabel" />
                        </HBox>
                        <HBox spacing="10">
                            <Label style="-fx-font-weight: bold;" text="วันที่เดินทาง:" />
                            <Label fx:id="travelDateLabel" />
                        </HBox>
                        <HBox spacing="10">
                            <Label style="-fx-font-weight: bold;" text="ประเภท:" />
                            <Label fx:id="trainTypeLabel" />
                        </HBox>
                        <HBox spacing="10">
                            <Label style="-fx-font-weight: bold;" text="ที่นั่ง:" />
                            <Label fx:id="seatLabel" />
                        </HBox>
                        <Label style="-fx-font-weight: bold; -fx-underline: true;" text="ผู้โดยสาร" />
                        <VBox fx:id="passengerListVBox" spacing="5" />
                        <HBox spacing="10">
                            <Label style="-fx-font-weight: bold;" text="วิธีชำระเงิน:" />
                            <Label fx:id="paymentMethodLabel" />
                        </HBox>
                        <HBox spacing="10">
                            <Label style="-fx-font-weight: bold;" text="ราคาสุทธิ:" />
                            <Label fx:id="totalPriceLabel" />
                        </HBox>
                        <HBox spacing="10">
                            <Label style="-fx-font-weight: bold;" text="สถานะ:" />
                            <Label fx:id="statusLabel" />
                        </HBox>
                        <Label fx:id="cancelledLabel" text="* การจองนี้ถูกยกเลิกแล้ว" textFill="RED" visible="false" />
                        <Label style="-fx-font-weight: bold; -fx-underline: true; -fx-padding: 10 0 0 0;" text="QR Code ของตั๋ว" />
                        <ImageView fx:id="qrCodeImageView" fitWidth="150" fitHeight="150" preserveRatio="true" pickOnBounds="true" />
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Button fx:id="backButton" onAction="#onBack" styleClass="button2" text="ย้อนกลับ" textFill="WHITE" />
            <Button fx:id="cancelButton" onAction="#onCancelBooking" styleClass="button2" text="ยกเลิกตั๋ว" textFill="WHITE" />
        </HBox>
    </bottom>
</BorderPane>
