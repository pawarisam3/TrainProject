<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="584.0" prefWidth="900" stylesheets="@MainCss.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controllers.AdminTrainManagementController">
    <Label layoutX="20" layoutY="10" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="Train Management" />
    <HBox alignment="CENTER_LEFT" layoutX="20" layoutY="50" prefHeight="40" spacing="10">
        <Label text="Train ID:" textFill="WHITE" />
        <TextField fx:id="searchIdField" prefHeight="33.0" prefWidth="84.0" promptText="Train ID" />
        <Label text="From:" textFill="WHITE" />
        <TextField fx:id="searchFromField" prefHeight="33.0" prefWidth="80.0" promptText="Station" />
        <Label text="To:" textFill="WHITE" />
        <TextField fx:id="searchToField" prefHeight="33.0" prefWidth="69.0" promptText="Station" />
        <Label text="Date:" textFill="WHITE" />
        <ComboBox fx:id="dayCombo" prefHeight="46.0" prefWidth="100.0" promptText="Day" styleClass="combo-box" />
        <ComboBox fx:id="monthCombo" prefHeight="46.0" prefWidth="103.0" promptText="Month" styleClass="combo-box" />
        <ComboBox fx:id="yearCombo" prefHeight="46.0" prefWidth="103.0" promptText="Year" styleClass="combo-box" />
        <Button onAction="#handleSearchTrains" prefHeight="25.0" prefWidth="60.0" styleClass="button2" text="Search" textFill="WHITE" />
        <Button onAction="#handleResetSearch" prefHeight="25.0" prefWidth="56.0" styleClass="button2" text="Reset" textFill="WHITE" />
    </HBox>

    <TableView fx:id="trainTable" layoutX="20" layoutY="100" prefHeight="387.0" prefWidth="860" styleClass="list-view" stylesheets="@MainCss.css">
        <columns>
            <TableColumn fx:id="idCol" prefWidth="100" text="Train ID" />
            <TableColumn fx:id="fromCol" prefWidth="120" text="From" />
            <TableColumn fx:id="toCol" prefWidth="120" text="To" />
            <TableColumn fx:id="departureCol" prefWidth="100" text="Departure" />
            <TableColumn fx:id="arrivalCol" prefWidth="100" text="Arrival" />
            <TableColumn fx:id="typeCol" prefWidth="80" text="Type" />
            <TableColumn fx:id="seatsCol" prefWidth="80" text="Seats" />
        </columns>
    </TableView>
    <HBox alignment="CENTER_LEFT" layoutX="20" layoutY="481.0" prefHeight="64.0" prefWidth="586.0" spacing="15">
        <Button onAction="#handleAddTrain" prefWidth="120" styleClass="button2" text="Add Train" textFill="WHITE" />
        <Button onAction="#handleDeleteTrain" prefWidth="120" styleClass="button2" text="Delete Train" textFill="WHITE" />
        <Button onAction="#handleAddNewsImage" prefWidth="150" styleClass="button2" text="Add News Image" textFill="WHITE" />
      <Button onAction="#handleDeleteNewsImage" prefWidth="150" styleClass="button2" text="Delete News Image" textFill="WHITE" />
    </HBox>
</AnchorPane>
